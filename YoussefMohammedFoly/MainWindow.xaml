<Window x:Class="YoussefMohammedFoly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:YoussefMohammedFoly"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800" Icon="/login.png">
    <Grid>
        <TextBlock Text="Welcome In Task Management System " FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,20,0,359"/>

        <TextBlock FontSize="25" Text="Username:" HorizontalAlignment="Left" Margin="184,87,0,0" VerticalAlignment="Top" Height="40" Width="125"/>
        <TextBox x:Name="UsernameTextBox" Width="200" HorizontalAlignment="Left" Margin="326,78,0,298"/>

        <TextBlock FontSize="25" Text="Password:" HorizontalAlignment="Left" Margin="192,188,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="PasswordBox" Width="200" HorizontalAlignment="Left" Margin="326,176,0,200"/>

        <Button Content="Login" Width="100" Height="30" HorizontalAlignment="Center" Margin="0,180,0,0"
     Click="LoginButton_Click" Cursor="Hand"/>
    </Grid>
</Window>
